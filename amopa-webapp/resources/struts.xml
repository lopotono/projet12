<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<package name="default" extends="struts-default">
		<default-action-ref name="index" />

		<action name="index">
			<result>index.jsp</result>
		</action>

		<!-- Action login/logout -->
		<action name="login"
			class="org.projet.amopa.webapp.action.LoginAction" method="login">
			<result name="input">login/login.jsp</result>
			<result name="success" type="redirectAction">index</result>
		</action>
		<action name="logout"
			class="org.projet.amopa.webapp.action.LoginAction" method="logout">
			<result type="redirectAction">index</result>
		</action>

		<!-- Action ajouter une activité -->
		<action name="addActivity"
			class="org.projet.amopa.webapp.action.AddActivityAction"
			method="execute">
			<result name="success">secretaire/description.jsp</result>
		</action>

		<!-- Action afficher formulaire activité -->
		<action name="formulaireActivity">
			<result>secretaire/description.jsp</result>
		</action>

		<!-- Action afficher la liste des expositions -->
		<action name="listActivityExpo"
			class="org.projet.amopa.webapp.action.ListActivityExpoAction"
			method="execute">
			<result name="success">activities/listeexpo.jsp</result>
		</action>

		<!-- Action afficher la liste des concerts -->
		<action name="listActivityConcert"
			class="org.projet.amopa.webapp.action.ListActivityConcertAction"
			method="execute">
			<result name="success">activities/listeconcert.jsp</result>
		</action>

		<!-- Action afficher la liste des conférences -->
		<action name="listActivityConf"
			class="org.projet.amopa.webapp.action.ListActivityConfAction"
			method="execute">
			<result name="success">activities/listeconf.jsp</result>
		</action>

		<!-- Action afficher la liste des voyages 1 jour -->
		<action name="listActivityVoyage"
			class="org.projet.amopa.webapp.action.ListActivityVoyageAction"
			method="execute">
			<result name="success">activities/listevoyage.jsp</result>
		</action>

		<!-- Action afficher la liste des voyages plusieurs jours -->
		<action name="listActivityVoyagePlus"
			class="org.projet.amopa.webapp.action.ListActivityVoyagePlusAction"
			method="execute">
			<result name="success">activities/listevoyageplus.jsp</result>
		</action>

		<!-- Action afficher la liste des AG -->
		<action name="listAG"
			class="org.projet.amopa.webapp.action.ListActivityAGAction"
			method="execute">
			<result name="success">activities/listeag.jsp</result>
		</action>

		<!-- Action afficher détails des activités -->
		<action name="detailsActivity"
			class="org.projet.amopa.webapp.action.DetailsActivityAction"
			method="execute">
			<result name="success">activities/details.jsp</result>
		</action>

		<!-- Action afficher contact -->
		<action name="contact">
			<result>contact/contact.jsp</result>
		</action>

		<!-- Action afficher l'historique des activités par utilisateur -->
		<action name="historique"
			class="org.projet.amopa.webapp.action.ListActivityByUserAction"
			method="execute">
			<result>activities/historique.jsp</result>
		</action>

		<!-- Action réserver une activité -->
		<action name="reserver"
			class="org.projet.amopa.webapp.action.ReserverAction"
			method="execute">
			<result name="success">reservations/confirmation.jsp</result>
			<result name="error">activities/details.jsp</result>
		</action>

		<!-- Action suivi des réservations -->
		<action name="suivi">
			<result>reservations/suivi.jsp</result>
		</action>

		<!-- Action actualiser les réservations -->
		<action name="actualiser"
			class="org.projet.amopa.webapp.action.ActualiserAction"
			method="execute">
			<result name="success">reservations/suivi.jsp</result>
		</action>

		<!-- Action lister les utilisateurs -->
		<action name="listUser"
			class="org.projet.amopa.webapp.action.ListUserAction"
			method="execute">
		</action>

		<!-- Action supprimer une réservation par le trésorier -->
		<action name="remove"
			class="org.projet.amopa.webapp.action.RemoveReservationAction"
			method="execute">
			<result name="success">reservations/suivi.jsp</result>
		</action>

		<!-- Action annuler une réservation par l'utilisateur -->
		<action name="canceled"
			class="org.projet.amopa.webapp.action.CanceledReservationAction"
			method="execute">
			<result name="success">index</result>
		</action>

		<!-- Action afficher liste des activités -->
		<action name="listActivity"
			class="org.projet.amopa.webapp.action.ListActivityAction"
			method="execute">
			<result name="success">activities/listeactivity.jsp</result>
		</action>

		<!-- Action afficher formulaire places disponibles -->
		<action name="form">
			<result>tresorier/places.jsp</result>
		</action>

		<!-- Action formulaire places disponibles pour le trésorier -->
		<action name="formPlaces"
			class="org.projet.amopa.webapp.action.FormPlacesAction"
			method="execute">
			<result name="success">tresorier/places.jsp</result>
		</action>

	</package>
</struts>