<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="projetMailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" />
		<property name="port" value="587" />
		<property name="username" value="terragef@gmail.com" />
		<property name="password" value="Innelec_27" />
		<property name="protocol" value="smtp" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
				<prop key="datasource.url">jdbc:postgresql://localhost:5432/db_amopa</prop>
			</props>
		</property>
	</bean>

	<bean id="mailSender"
		class="org.projet.amopa.business.mail.MailSender">
		<property name="javaMailSender" ref="projetMailSender" />
	</bean>

	<bean id="txManagerActivity"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourceAmopa"></property>
	</bean>

	<bean id="abstractManager" abstract="true">
		<property name="daoFactory" ref="daoFactory" />
		<property name="platformTransactionManager"
			ref="txManagerActivity" />
		<property name="ms" ref="mailSender" />
	</bean>

	<bean id="userManager"
		class="org.projet.amopa.business.impl.UserManagerImpl"
		parent="abstractManager" />

	<bean id="activityManager"
		class="org.projet.amopa.business.impl.ActivityManagerImpl"
		parent="abstractManager" />

	<bean id="reservationManager"
		class="org.projet.amopa.business.impl.ReservationManagerImpl"
		parent="abstractManager" />

	<bean id="managerFactory"
		class="org.projet.amopa.business.impl.ManagerFactoryImpl">
		<property name="userManager" ref="userManager" />
		<property name="activityManager" ref="activityManager" />
		<property name="reservationManager" ref="reservationManager" />
	</bean>
</beans>